<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

    <Appenders>
        <Console name="CONSOLE">
            <PatternLayout pattern="%d [%t] %5p %c{1.} - %m%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="com.mycompany" level="DEBUG"/>
        <Root level="ALL">
            <AppenderRef ref="CONSOLE"/>
        </Root>
    </Loggers>

</Configuration>